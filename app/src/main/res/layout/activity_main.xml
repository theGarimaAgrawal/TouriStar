<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:src="@drawable/road"
        android:alpha="0.5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="         TouriStar"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:fontFamily="cursive"
        android:layout_below="@id/black"
        android:id="@+id/name"/>
    <ImageView
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="200dp"
        android:src="@drawable/mylogo"
        android:id="@+id/logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your tourist buddy to build a star trip"
        android:textSize="25sp"
        android:fontFamily="@font/unisansthinitalic"
        android:textColor="@color/black"
        android:layout_below="@id/name"
        android:gravity="center"
        android:padding="30dp"
        android:id="@+id/tagline"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Head office:"
        android:textSize="20sp"
        android:layout_above="@id/address"
        android:paddingLeft="20dp"
        android:id="@+id/head"
        android:textColor="#C9D1FB" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5th block, \nKoramangla, \nBangalore"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:id="@+id/address"
        android:paddingTop="2.5dp"
        android:textColor="#C9D1FB"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="Contact No.:\n9783323411"
        android:textColor="#C9D1FB"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route\nBudget Meter\nAugmented Reality\nBooking"
        android:id="@+id/features"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_centerHorizontal= "true"
        android:layout_above="@id/head"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:textColor="#9CCBF8"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FEATURES"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_centerHorizontal= "true"
        android:textColor="#C9D1FB"
        android:layout_above="@id/features"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:id="@+id/black"
        android:background="@color/black"
        android:layout_below="@id/logo"
        android:layout_marginTop="18dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:paddingTop="10dp"
        android:background="#9CCBF8"
        android:layout_above="@id/head"
        />
</RelativeLayout>